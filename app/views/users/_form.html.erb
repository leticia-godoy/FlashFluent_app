<%= render 'shared/errors', obj: @user%>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-md-2">
                Nome
            </div>
            <div class="col-md-8">
                <%= f.text_field :username, class: "form-control", placeholder: "digite o nome de usuário", 
                    autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                E-mail
            </div>
            <div class="col-md-8">
                <%= f.email_field :email, class: "form-control", placeholder: "Digite seu e-mail", 
                    autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Senha
            </div>
            <div class="col-md-8">
                <%= f.password_field :password, class: "form-control", placeholder: "Digite uma senha", 
                    autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                Confirme a senha
            </div>
            <div class="col-md-8">
                <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a senha", 
                    autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <%= f.submit(@user.new_record? ? "Criar conta" : "Atualizar conta",
                                                class: "btn btn-primary btn-lg btn-xlarge") %>
            </div>
        </div>
        <% end %>
        <div class="center colormatch">
            [ <%= link_to "Voltar à listagem de users", users_path %> ]
        </div>
    </div>
</div>