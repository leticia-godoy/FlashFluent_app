<%= render 'shared/errors', obj: @card%>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@card, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-md-2">
                Palavra
            </div>
            <div class="col-md-8">
                <%= f.text_field :word, class: "form-control", placeholder: "Nome do Card", 
                    autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Pontuação
            </div>
            <div class="col-md-8">
                <%= f.text_field :points, class: "form-control", placeholder: "Pontuação atrelada à nova palavra", 
                    autofocus: true %>
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                Detalhes
            </div>
            <div class="col-md-8">
                <%= f.text_area :description, rows: 10, class: "form-control", 
                                    placeholder: "Descreva a palavra. Inclua exemplos em frases e dicas de percepção" %>
            </div>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-md-offset-2 col-md-8">
                    <%= f.collection_check_boxes :topic_ids, Topic.all, :id, :name do |cb| %>
                        <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <%= f.submit "Adicionar", class: "btn btn-primary btn-lg btn-xlarge" %>
            </div>
        </div>
        <% end %>
        <div class="col-md-4 col-md-offset-4 colormatch">
            [ <%= link_to "Voltar à listagem de Cards", cards_path %> ]
        </div>
    </div>
</div>