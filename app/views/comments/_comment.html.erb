<div class="row">
    <div class="col-md-2">
        <section class="user_info center">
            <%= gravatar_for(comment.user, size: 60) %>
        </section>
    </div>
    <div class="col-md-8 well">
        <p><%= comment.description %></p>
        <p>
            <span class="quiet"><small>Criado:
                    <%= time_ago_in_words(comment.created_at) %> ago. por:
                    <%= comment.user.username %></small></span>
        </p>
    </div>
</div>